<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd&quot;>
        <hibernate-mapping>
        <class name="net.proselyte.hibernate.example.model.Developer" table="HIBERNATE_DEVELOPERS">
<meta attribute="class-description">
This class contains developer's details.
</meta>
<hibernate-mapping package="eg">
<id name="id" type="int" column="ID">
<generator class="native"/>
</id>
<property name="username" column="NAME" type="string"/>
<property name="phones" column="PHONE" type="string"/>
        </class>
        </hibernate-mapping>